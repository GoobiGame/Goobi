{
  "version": 2,
  "builds": [
    {"src": "*.html", "use": "@vercel/static"},  
    {"src": "*.js", "use": "@vercel/static"},    
    {"src": "assets/*", "use": "@vercel/static"}, 
    {"src": "api/*.py", "use": "@vercel/python"}  
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/api/$1"},
    {"src": "/assets/(.*)", "dest": "/assets/$1"},
    {"src": "/(.*)\\.js", "dest": "/$1.js"},
    {"src": "/(.*)\\.html", "dest": "/$1.html"},
    {"src": "/(.*)", "dest": "index.html"}
  ]
}