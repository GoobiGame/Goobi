{
  "version": 2,
  "builds": [
    {"src": "index.html", "use": "@vercel/static"},
    {"src": "*.js", "use": "@vercel/static"},  // Serve JS files
    {"src": "api/*.py", "use": "@vercel/python"}
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/api/$1"},  // API endpoints
    {"src": "/assets/(.*)", "dest": "/assets/$1"},  // Assets
    {"src": "/(.*)\.js", "dest": "/$1.js"},  // JS files
    {"src": "/(.*)", "dest": "index.html"}  // Fallback to index.html
  ]
}